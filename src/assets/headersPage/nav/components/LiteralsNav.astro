          </figure>
          <div class="box-left" />
        </button>
        <slot name="subList" />
      </div>
    ) : (
      <div class="name-literal">
        <a href={href}>
          <figure>
            <slot name="icon" />
          </figure>
          {word}
          <div class="box-left" />
        </a>
      </div>
    )
  }
</li>
